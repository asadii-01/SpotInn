<% layout("./layouts/boilerplate") %>

<div class="row mt-4">
    <h1 class="col-6 offset-3">Login</h1>
  <div class="col-6 offset-3 mt-3">
    <form action="/login" method="post" novalidate class="needs-vaidation">
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Enter a valid username.</div>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Enter a valid password.</div>
      </div>

      <button class="btn mt-3 mb-5 btn-dark add-btn">Login</button>
    </form>
  </div>
</div>
