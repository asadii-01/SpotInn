<% layout("./layouts/boilerplate") %>

  <h1>All Listings</h1>
  <div class="row mt-4 row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for (const listing of allListings) { %>
    <a href="/listings/<%= listing.id %>" class="listing-link">
      <div class="card col">
        <img
          src="<%= listing.image %>"
          class="card-img-top"
          alt="Listing image"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b> <br />
            Rs.<%= listing.price.toLocaleString("en-PK") %> / night
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
